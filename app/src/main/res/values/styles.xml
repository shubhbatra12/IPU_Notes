<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LauncherTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/white</item>
        <item name="textColorTertiary">@color/grey</item>
        <item name="labelBackgroundColor">@color/blue</item>
        <item name="backgroundPrimary">@color/lightGrey</item>
        <item name="backgroundSecondary">@color/white</item>

        <item name="android:listDivider">@color/white</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/white</item>
        <item name="textColorTertiary">@color/lightGrey</item>
        <item name="labelBackgroundColor">@color/blue</item>
        <item name="backgroundPrimary">@color/darkGrey</item>
        <item name="backgroundSecondary">@color/grey</item>

        <!--    Defaults...     -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/lightGrey</item>
        <item name="android:itemBackground">@color/grey</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert</item>
        <item name="android:listDivider">@color/lightGrey</item>
    </style>

    <style name="BlackTheme" parent="AppTheme">
        <item name="textColorPrimary">@color/white</item>
        <item name="textColorSecondary">@color/white</item>
        <item name="textColorTertiary">@color/lightGrey</item>
        <item name="labelBackgroundColor">@color/blue</item>
        <item name="backgroundPrimary">@color/black</item>
        <item name="backgroundSecondary">@color/grey</item>

        <!--    Defaults...     -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/lightGrey</item>
        <item name="android:itemBackground">@color/grey</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Dialog.Alert</item>
        <item name="android:listDivider">@color/lightGrey</item>
    </style>

</resources>
