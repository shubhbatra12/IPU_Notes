<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="?attr/backgroundPrimary"
    tools:context=".LoginActivity">




    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:backgroundTint="?attr/labelBackgroundColor"
    android:textColor="?attr/textColorSecondary"
    android:layout_height="wrap_content"
    android:text="Login with Mobile"
    android:id="@+id/mobileLoginBtn"
    android:textAllCaps="false"
    android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="?attr/backgroundSecondary"
        android:textColor="?attr/textColorPrimary"
        android:layout_height="wrap_content"
        android:text="Continue with Google"
        android:drawableEnd="@drawable/icons8google24"
        android:id="@+id/googleBtn"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="?attr/labelBackgroundColor"
        android:textColor="?attr/textColorSecondary"
        android:layout_height="wrap_content"
        android:text="Override Login"
        android:id="@+id/skipBtn"
        android:textAllCaps="false"
        android:textSize="16sp" />







</LinearLayout>