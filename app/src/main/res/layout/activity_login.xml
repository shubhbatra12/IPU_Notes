<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="?attr/backgroundPrimary"
    tools:context=".LoginActivity">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
    android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
    android:layout_marginEnd="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:drawableEnd="@drawable/icons8android24"
    android:backgroundTint="?attr/labelBackgroundColor"
    android:textColor="?attr/textColorSecondary"
    android:layout_height="wrap_content"
    android:text="Login with Mobile"
    android:id="@+id/mobileLoginBtn"
    android:textAllCaps="false"
    android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="?attr/backgroundSecondary"
        android:textColor="?attr/textColorPrimary"
        android:layout_height="wrap_content"
        android:text="Continue with Google"
        android:layout_alignParentBottom="true"
        android:drawableEnd="@drawable/icons8google24"
        android:id="@+id/googleBtn"
        android:textAllCaps="false"
        android:textSize="16sp" />



</RelativeLayout>





</LinearLayout>